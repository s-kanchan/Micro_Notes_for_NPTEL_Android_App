<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.micro.nptel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />
    
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.micro.nptel.SplashScreen"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.micro.nptel.Home"
            android:label="@string/app_name" 
            android:configChanges="orientation" >
        </activity>
        
        <activity android:name="com.micro.nptel.Chat"
            android:label="@string/app_name" 
            android:configChanges="orientation" >
        </activity>
        
        <activity android:name="com.micro.nptel.CreateNote"
            android:label="@string/app_name" 
            android:configChanges="orientation" >
        </activity>
        
        <activity android:name="com.micro.nptel.AboutUs"
            android:label="@string/app_name" 
            android:configChanges="orientation" >
        </activity>
        
        <activity android:name="com.micro.nptel.ListVideos"
            android:label="@string/app_name" 
            android:configChanges="orientation" >
        </activity>
        
    </application>

</manifest>
